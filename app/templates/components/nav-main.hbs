<div class="ui fixed menu">
  <div class="ui container">
    {{#link-to 'index' class="header item" activeClass=""}}
      {{fmf-constant 'name'}}
    {{/link-to}}
    <a class="item" href="http://forum.fmf.si">Forum</a>
    <a class="item" href="http://revija.fmf.si">Revija</a>
    <a class="item">Zapiski</a>
    {{#link-to 'izjave' class="item"}}
      Izjave
    {{/link-to}}
    <div class="ui dropdown link item" tabindex="-1">
      <span class="text">FMF</span>
      <i class="dropdown icon" tabindex="0"><div class="menu"></div></i>
      <div class="menu" tabindex="-1">
        <a class="item" href="http://svet.fmf.si" target="_blank">Študentski svet</a>
        <div class="divider"></div>
        <a class="item" href="http://fmf.uni-lj.si" target="_blank">Uradna stran FMF</a>
        <a class="item" href="https://vis.fmf.uni-lj.si" target="_blank">VIS</a>
        <a class="item" href="http://ucilnica.fmf.uni-lj.si" target="_blank">Spletna učilnica</a>
        <a class="item" href="http://predmeti.fmf.uni-lj.si" target="_blank">Predmeti</a>
      </div>
    </div>
    <div class="right borderless menu">
    {{#if session.isAuthenticated}}
      <div class="ui dropdown link item" tabindex="-1">
        <span class="text"><img class="ui avatar image" src="{{ session.currentUser.avatar }}">{{ session.currentUser.name }}</span>
        <i class="dropdown icon" tabindex="0"><div class="menu"></div></i>
        <div class="menu" tabindex="-1">
          <div class="item">
            Messages
            {{#if session.currentUser.messages }}
            <div class="ui label nav red">{{session.currentUser.messages}}</div>
            {{else}}
            <div class="ui label nav">0</div>
            {{/if}}
          </div>
          <div class="item" {{ action 'invalidateSession' }}>Logout</div>
        </div>
      </div>
    {{else}}
      <div class="item">
        <a class="ui button" {{action 'authenticate' 'fmf-oauth2'}}>Log in</a>
      </div>
    {{/if}}
    </div>
  </div>
</div>
