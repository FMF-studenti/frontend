{{#if session.isAuthenticated}}
  {{#link-to 'quotes.add' class="ui primary labeled icon button" activeClass="" }}
    <i class="plus icon"></i> Vnesi novo izjavo
  {{/link-to}}
{{else}}
  <i>Za vnos nove izjave se je potrebno prijaviti.</i>
{{/if}}

<div class="ui items">
  {{#each model as |quote|}}
    <blockquote class="item">
      <div class="content">
        <div class="buttons">
          <p>
            {{#link-to 'quotes.quote' quote class="ui primary icon button" activeClass="" title="Izjava" }}
              <i class="linkify icon"></i>
            {{/link-to}}
            {{#if session.isAuthenticated}}
              <button class="ui primary icon button" {{action 'report' quote.id}} title="Prijavi napako">
                <i class="warning circle icon"></i>
              </button>
            {{/if}}
          </p>
        </div>
        <div class="description">
          <p>{{quote.content}}</p>
        </div>
        <div class="meta">
          <cite>{{quote.author}}</cite>
        </div>
      </div>
    </blockquote>
  {{/each}}
</div>

{{infinity-loader infinityModel=model}}
