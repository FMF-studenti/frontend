/*******************************
     User Global Variables
*******************************/
/* Font */

@fontName          : 'PT Sans';
@fontSmoothing     : antialiased;

@headerFont        : @fontName, 'Helvetica Neue', Arial, Helvetica, sans-serif;
@pageFont          : 'Helvetica Neue', Arial, Helvetica, sans-serif;

@googleFontName    : 'PT+Sans';
@importGoogleFonts : true;
@googleFontSizes   : '400,700';
@googleSubset      : 'latin,latin-ext';

@googleProtocol    : 'https://';
@googleFontRequest : '@{googleFontName}:@{googleFontSizes}&subset=@{googleSubset}';

@imagePath : 'themes/default/assets/images';
@fontPath : 'themes/default/assets/fonts';

/* Colors */
@primaryColor        : @blue;
@secondaryColor      : @black;

@lightPrimaryColor   : @lightBlue;
@lightSecondaryColor : @lightBlack;

@pageBackgroundMain : #f7f7f7;

/* Sizes */

@headerSizeAbsolute : 150;
@headerSize : (@headerSizeAbsolute / 14);
@relativeHeaderSize : unit( round(@headerSize * @emSize) / @emSize, em);
